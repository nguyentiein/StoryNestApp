<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Image and Overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <!-- Background Image -->
            <ImageView
                android:id="@+id/imageViewCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_edt" />



            <!-- Text Information on the right -->
            <ImageView
                android:id="@+id/img_story"
                android:layout_width="163dp"
                android:layout_height="213dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/bg_edt" />

            <LinearLayout
                android:layout_width="198dp"
                android:layout_height="match_parent"
                android:layout_gravity="end|bottom"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BERSERK"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_author"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Miura Kentaro"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dark"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <ImageView
                        android:layout_width="26dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="8dp"
                        android:src="@drawable/ic_star_foreground"
                        app:tint="#FFD700" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <!-- Icons Group and Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp">

            <!-- Button -->
            <Button
                android:id="@+id/btnRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:backgroundTint="@color/black"
                android:text="ĐỌC TRUYỆN" />

            <!-- Icons Group -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="16dp">

                <!-- Star ImageButton -->
                <ImageButton
                    android:id="@+id/btnRate"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_star_foreground"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:contentDescription="Star"
                    app:tint="@color/black" />

                <!-- Favorite ImageButton -->
                <ImageButton
                    android:id="@+id/btnFavorite"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_favorite"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:contentDescription="Favorite"
                    android:layout_marginStart="16dp"
                    app:tint="@color/black" />

                <!-- Share ImageButton -->
                <ImageButton
                    android:id="@+id/btnShare"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_share_foreground"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp"
                    android:contentDescription="Share"
                    android:layout_marginStart="16dp"
                    app:tint="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <!-- Description Section -->
        <TextView
            android:id="@+id/textViewDescriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Mô tả"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Truyện kể về Gatts, hay Black Swordsman, trong cuộc đời đầy những trận chiến với số phận."
            android:paddingHorizontal="16dp" />

        <!-- Chapters Section -->
        <TextView
            android:id="@+id/textViewChaptersTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chapter"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="16dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chapters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp" />

    </LinearLayout>
</ScrollView>
